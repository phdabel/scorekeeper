<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_team_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="Team A"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="56sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/img_goal_a"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingBottom="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ball" />

                <ImageButton
                    android:id="@+id/img_foul_a"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingBottom="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/foul" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageButton
                        android:id="@+id/img_yellowcard_a"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/yellow_card" />

                    <ImageButton
                        android:id="@+id/img_redcard_a"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/red_card" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/blk_fouls_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/lbl_fouls"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/foul_value_a"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_gravity="clip_horizontal"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blk_cards_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/lbl_cards"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/cards_value_a"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:orientation="horizontal"></LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:id="@+id/layout_team_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="Team B"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="56sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/img_goal_b"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingBottom="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ball" />

                <ImageButton
                    android:id="@+id/img_foul_b"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingBottom="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/foul" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <ImageButton
                        android:id="@+id/img_yellowcard_b"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/yellow_card" />

                    <ImageButton
                        android:id="@+id/img_redcard_b"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/red_card" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/blk_fouls_b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/lbl_fouls"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/foul_value_b"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:orientation="horizontal"></LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blk_cards_b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/lbl_cards"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/cards_value_b"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:orientation="horizontal"></LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="140dp"
            android:paddingRight="140dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="reset"
                android:text="@string/btn_reset"
                android:textColor="@color/colorText" />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>